generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("STAGING_DATABASE_URL")
}

model User {
  id          String      @id @default(uuid())
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  createBy    String      @default("system")
  updateBy    String      @default("system")
  active      String      @default("false")

  systemData  SystemData?
  providers    Providers?
}

model SystemData {
  id           String     @id @default(uuid())
  login        String
  email        String     @unique
  passwordHash String
  passwordSalt String
  userId       String     @unique
  
  user         User      @relation(fields: [userId], references: [id])
}

model Providers {
  id      String     @id @default(uuid())
  gitHub  Json?      // JSON данные для поля gitHub
  google  Json?      // JSON данные для поля google
  userId  String     @unique
  
  user    User      @relation(fields: [userId], references: [id])
}
