generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("STAGING_DATABASE_URL")
}

model User {
  id           String      @id @default(uuid())
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  createBy     String      @default("system")
  updateBy     String      @default("system")
  activeStatus       String      @default("true")
  confirmationStatus Boolean @default(false)
  email        String     @unique
  passwordHash String
  passwordSalt String
  recoveryCode     String?   
  confirmationCode String? 

  devices  Device[]
  providers    Providers?
}


model Device {
  id            String   @id @default(uuid())
  userId        String
  deviceJwtKey  String
  createdAt     DateTime @default(now())


  user          User     @relation(fields: [userId], references: [id])


}

model Providers {
  id      String     @id @default(uuid())
  gitHub  Json?      // JSON данные для поля gitHub
  google  Json?      // JSON данные для поля google
  userId  String     @unique
  
  user    User      @relation(fields: [userId], references: [id])
}
